{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<main>
    <h1>Produit</h1>
    <div class="container my-4">
        <div class="row">
            <div class="col-md-6">
                <img src="{{ vich_uploader_asset(sweatshirt, 'imageFile') }}" 
                    alt="Image Sweatshirt {{ sweatshirt.name }}" 
                    class="img-fluid" 
                    style="max-height: 400px; object-fit: contain;">
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-start">
                <div class="mb-3">        
                    <h2 class="card-title">{{ sweatshirt.name }}</h2>
                    <span class="card-text d-block">Prix : {{ sweatshirt.price }}â‚¬</span>
                </div>
                {{ form_start(form, {
                    attr: {'id': 'add-to-cart-form'},
                    action: path('cart_add_sweatshirt', {'id': sweatshirt.id}),
                    method: 'POST'
                }) }}
                    {{ form_row(form.sweatshirtSize, {
                        attr: {'class': 'form-select',
                        'size': '5',
                        'style': 'width: auto;'}
                    }) }}
                    {{ form_row(form.quantity, {
                        attr: {'class': 'form-control my-3',
                        'style': 'width: 100px;'}
                    }) }}
                {{ form_end(form) }}
                <button type="submit" form="add-to-cart-form" class="btn btn-outline-primary mt-2" style="width:200px;">Ajouter au panier</button>
            </div>
        </div>
    </div>
</main>
{% endblock %}

